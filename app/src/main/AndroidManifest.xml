<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liyi.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainAty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SimplePreivewAty"
            android:launchMode="singleTask" />

        <activity
            android:name=".activity.CustomPreviewAty"
            android:launchMode="singleTask" />

        <activity
            android:name=".activity.HorizontalListAty"
            android:launchMode="singleTask" />

        <activity
            android:name=".activity.VerticalListAty"
            android:launchMode="singleTask" />

        <activity
            android:name=".activity.ImagePagerAty"
            android:launchMode="singleTask" />

        <activity android:name=".activity.VPActivity"
            android:theme="@style/translucent"
            />
    </application>
</manifest>